{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "required": [
    "email",
    "firstName",
    "lastName",
    "password"
  ],
  "properties": {
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 60,
      "format": "email"
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 20
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "imageUrl": {
      "type": "string",
      "format": "uri-reference"
    },
    "bio": {
      "type": "string",
      "maxLength": 300
    }
  },
  "additionalProperties": false
}