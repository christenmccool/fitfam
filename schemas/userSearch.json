{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 60,
      "format": "email"
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "userStatus": {
      "type": "string",
      "enum": ["active", "pending", "blocked", "inactive"]
    },
    "bio": {
      "type": "string",
      "maxLength": 300
    }
  },
  "additionalProperties": false
}
