{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "required": [
    "familyName"
  ],
  "properties": {
    "familyName": {
      "type": "string",
      "minLength": 5,
      "maxLength": 30
    },
    "joinCode": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "imageUrl": {
      "type": "string",
      "format": "uri-reference"
    },
    "bio": {
      "type": "string",
      "maxLength": 300
    }
  },
  "additionalProperties": false
}
